You type your question in the terminal â†’ AI replies instantly â†’ you can keep chatting until you type exit/quit

import os
from dotenv import load_dotenv
from langchain_google_genai import ChatGoogleGenerativeAI

load_dotenv()
os.environ["GOOGLE_API_KEY"] = "AIzaSyDOhlcF6po_OI1mYhCGX9a7fuHaUOJ6uOU"

print("KEY READ:", os.getenv("GOOGLE_API_KEY"))
api_key = os.getenv("GOOGLE_API_KEY ")

if not api_key:
    raise ValueError("Missing GOOGLE_API_KEY in environment")
else:
   llm = ChatGoogleGenerativeAI(
    model="gemini-2.0-flash",
    temperature=0,
    max_tokens=None,
    timeout=None,
    max_retries=2,
    google_api_key=api_key  # important param name
)

while True:
    user_input = input("search> ")
    if user_input.lower() in ("exit", "quit"):
        print("Bye ğŸ‘‹")
        break

    result = llm.invoke(user_input)
    print(result.content)
